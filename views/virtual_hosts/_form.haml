%p.label
  Name
%p
  %input{:name => 'virtual_host[name]', :type => 'text', :size => '50', :maxlength => '50', :value => @virtual_host.name}

%p.label
  Server name
%p
  %input{:name => 'virtual_host[server_name]', :type => 'text', :size => '50', :maxlength => '50', :value => @virtual_host.server_name}

%p.label
  Document root
%p
  %input{:name => 'virtual_host[document_root]', :type => 'text', :size => '80', :maxlength => '80', :value => @virtual_host.document_root}

%p.label
  Rails environment
%p
  %select{:name => 'virtual_host[rails_env]'}
    %option{:value => @virtual_host.rails_env }= @virtual_host.rails_env
    %option{:value => ''} N/A
    %option{:value => 'development'} development
    %option{:value => 'staging'} staging
    %option{:value => 'test'} test
    %option{:value => 'production'} production

%p#submit
  %input{:name => 'submit', :type => 'Submit', :value => 'Save Virtual Host'}